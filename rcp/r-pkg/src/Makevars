OPENMP ?= 0

MCMODEL ?= large

SPECIALIZE_STEPFOR ?= 0
SPECIALIZE_SWITCH ?= 1

ifneq ($(OPENMP),0)
  PKG_CFLAGS += -fopenmp
  PKG_LIBS += -fopenmp
endif

ifneq ($(MCMODEL),large)
  PKG_CPPFLAGS += -DMCMODEL_SMALL
endif

ifneq ($(SPECIALIZE_STEPFOR),0)
  PKG_CPPFLAGS += -DSTEPFOR_SPECIALIZE
endif

ifneq ($(SPECIALIZE_SWITCH),0)
  PKG_CPPFLAGS += -DSWITCH_SPECIALIZE
endif

PKG_CPPFLAGS += -DALIGNMENT_LABELS=$(ALIGNMENT_LABELS)
PKG_CPPFLAGS += -DALIGNMENT_JUMPS=$(ALIGNMENT_JUMPS)
PKG_CPPFLAGS += -DALIGNMENT_LOOPS=$(ALIGNMENT_LOOPS)